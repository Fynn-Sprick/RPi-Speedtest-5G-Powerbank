<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnGpsStart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Start GPS"/>

        <Button
            android:id="@+id/btnGpsStop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stop GPS"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtGpsStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS: unbekannt"
        android:paddingTop="8dp"/>

    <Button
        android:id="@+id/btnRefreshAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktualisieren (Alles)"
        android:layout_marginTop="12dp"/>

    <!-- Router statuses -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/dotWg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/dot_red"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WireGuard"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnWgOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktivieren"/>

        <Button
            android:id="@+id/btnWgOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deaktivieren"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/dotDts"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/dot_red"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data to Server"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnDtsOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktivieren"/>

        <Button
            android:id="@+id/btnDtsOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deaktivieren"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speedtest (auto: 1 min)"
        android:textStyle="bold"
        android:paddingTop="12dp"/>

    <TextView android:id="@+id/txtSpeedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zeit: -"/>
    <TextView android:id="@+id/txtSpeedPing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ping: -"/>
    <TextView android:id="@+id/txtSpeedDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Down: -"/>
    <TextView android:id="@+id/txtSpeedUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Up: -"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pi – Docker speedtest-tracker"
        android:textStyle="bold"
        android:paddingTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/dotDocker"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/dot_red"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/txtDockerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: -"/>

        <Button
            android:id="@+id/btnDockerStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <Button
            android:id="@+id/btnDockerStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnDockerRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server – data_to_server_web.py"
        android:textStyle="bold"
        android:paddingTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/dotScript"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/dot_red"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/txtScriptStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: -"/>

        <Button
            android:id="@+id/btnScriptStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <Button
            android:id="@+id/btnScriptStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnScriptRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtPiUptime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uptime: -"
        android:paddingTop="12dp"/>

    <Button
        android:id="@+id/btnShutdownPi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shutdown Pi"/>

    <ScrollView
        android:id="@+id/scrollLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/txtLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"/>
    </ScrollView>
</LinearLayout>